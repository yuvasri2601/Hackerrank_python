import math
import os
import random
import re
import sys

# Complete the staircase function below.
def staircase(n):
    space=n-1
    for i in range(0,n):
        for j in range(0,space):
            print(end=" ")
        for k in range(0,i+1):
            print("#",end="")
        space=space-1
        print()

if __name__ == '__main__':
    n = int(input())

    staircase(n)
